<% provide(:title, "Followers") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.picture.url ? @user.picture.url : "default-profile-image" %>
      <h1><a href="/users/<%= @user.id %>"><%= @user.name %> (@<%= @user.username %>)</a></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Followers</h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <div id="infinite-scrolling">
        <%= will_paginate @users %>
      </div>
    <% end %>
  </div>
</div>